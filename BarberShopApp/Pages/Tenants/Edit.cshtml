@page
@model BarberShopApp.Pages.Tenants.EditModel
@{
    ViewData["Title"] = "Editar Barbería";
}

<div class="container my-5">

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <header class="text-center mb-5">
                <h1 class="display-6 fw-light text-dark">
                    <i class="bi bi-pencil-square me-2 text-dark"></i> @ViewData["Title"]
                </h1>
                <p class="lead text-muted">ID: @Model.Tenant.TenantId | Modifica los datos de la barbería.</p>
            </header>

            <div class="p-4 p-md-5 shadow-lg rounded-4 bg-white" style="border: 1px solid rgba(0, 0, 0, 0.1);">

                <form method="post" class="row g-4">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <input type="hidden" asp-for="Tenant.TenantId" />

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Tenant.Name" class="form-control" placeholder="Nombre de la Barbería" />
                            <label asp-for="Tenant.Name">Nombre de la Barbería</label>
                            <span asp-validation-for="Tenant.Name" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Tenant.AdminEmail" type="email" class="form-control" placeholder="Email del Administrador" />
                            <label asp-for="Tenant.AdminEmail">Email del Administrador</label>
                            <span asp-validation-for="Tenant.AdminEmail" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <div class="col-12 mt-5 d-flex justify-content-between">

                        <button type="submit" value="Guardar Cambios" class="btn btn-dark btn-lg shadow-sm">
                            <i class="bi bi-floppy-fill me-2"></i> Guardar Cambios
                        </button>

                        <a asp-page="./Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-x-lg me-2"></i> Cancelar
                        </a>
                    </div>
                </form>

            </div>

            <div class="text-center mt-4">
                <a asp-page="Index" class="text-decoration-none text-muted small">
                    <i class="bi bi-arrow-left"></i> Volver a la Lista de Barberías
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}