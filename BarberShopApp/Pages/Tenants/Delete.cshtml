@page
@model BarberShopApp.Pages.Tenants.DeleteModel
@{
    ViewData["Title"] = "Eliminar Barbería";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <header class="text-center mb-5">
                <h1 class="display-6 fw-light text-danger">
                    <i class="bi bi-x-octagon-fill me-2"></i> Confirmar Eliminación Permanente
                </h1>
                <h3 class="lead text-dark fw-bold mt-4">¡ADVERTENCIA! ¿Está seguro de que quiere eliminar la barbería "@Model.Tenant.Name"?</h3>
                <p class="text-danger lead fw-normal">Esta acción eliminará **todos** los datos asociados (Barberos, Servicios, Citas) y no se puede deshacer.</p>
            </header>

            <div class="p-4 p-md-5 shadow-lg rounded-4 bg-light" style="border: 2px solid rgba(220, 53, 69, 0.5);">

                <h4 class="mb-4 text-dark border-bottom pb-2">Detalles de la Barbería (Tenant ID: @Model.Tenant.TenantId)</h4>

                <ul class="list-group list-group-flush mb-4">

                    <li class="list-group-item bg-light d-flex justify-content-between">
                        <span class="text-muted fw-bold"><i class="bi bi-shop me-2"></i> @Html.DisplayNameFor(model => model.Tenant.Name):</span>
                        <span class="text-dark fw-bold">@Html.DisplayFor(model => model.Tenant.Name)</span>
                    </li>

                    <li class="list-group-item bg-light d-flex justify-content-between">
                        <span class="text-muted"><i class="bi bi-envelope me-2"></i> @Html.DisplayNameFor(model => model.Tenant.AdminEmail):</span>
                        <span class="text-dark">@Html.DisplayFor(model => model.Tenant.AdminEmail)</span>
                    </li>
                </ul>

                <form method="post" class="mt-4 pt-3 border-top">
                    <input type="hidden" asp-for="Tenant.TenantId" />

                    <div class="d-flex justify-content-between">
                        <button type="submit" value="Eliminar Permanentemente" class="btn btn-danger btn-lg shadow-sm">
                            <i class="bi bi-trash-fill me-2"></i> Eliminar Permanentemente
                        </button>

                        <a asp-page="./Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-x-lg me-2"></i> Cancelar y Volver
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>