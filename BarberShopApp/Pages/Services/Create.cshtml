@page
@model CreateModel

@{
    ViewData["Title"] = "Registrar Nuevo Servicio";
}

<div class="container my-5">

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <header class="text-center mb-5">
                <h1 class="display-6 fw-light text-dark">
                    <i class="bi bi-scissors me-2 text-dark"></i> @ViewData["Title"]
                </h1>
                <p class="lead text-muted">Define los detalles del nuevo servicio que ofrecerá la barbería.</p>
            </header>

            <div class="p-4 p-md-5 shadow-lg rounded-4 bg-white" style="border: 1px solid rgba(0, 0, 0, 0.1);">

                <form method="post" class="row g-4">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Service.Name" class="form-control" placeholder="Nombre del Servicio" />
                            <label asp-for="Service.Name">Nombre del Servicio</label>
                            <span asp-validation-for="Service.Name" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Service.DurationMinutes" type="number" class="form-control" placeholder="Duración (minutos)" />
                            <label asp-for="Service.DurationMinutes">Duración (min.)</label>
                            <span asp-validation-for="Service.DurationMinutes" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Service.Price" type="number" step="0.01" class="form-control" placeholder="Precio" />
                            <label asp-for="Service.Price">Precio</label>
                            <span asp-validation-for="Service.Price" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <div class="col-12 mt-5">
                        <button type="submit" value="Crear" class="btn btn-dark btn-lg w-100 shadow">
                            <i class="bi bi-check-circle-fill me-2"></i> Crear Servicio
                        </button>
                    </div>
                </form>

            </div>

            <div class="text-center mt-4">
                <a asp-page="Index" class="text-decoration-none text-muted small">
                    <i class="bi bi-arrow-left"></i> Volver a la Lista de Servicios
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}