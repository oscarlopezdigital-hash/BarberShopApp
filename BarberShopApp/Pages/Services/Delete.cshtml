@page
@model DeleteModel
@{
    ViewData["Title"] = "Eliminar Servicio";
}

<h1>Eliminar</h1>

<h3>¿Está seguro de que quiere eliminar este servicio?</h3>
<div>
    <h4>Servicio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.DurationMinutes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.DurationMinutes) min.
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Price) €
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Service.ServiceId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver a la Lista</a>
    </form>
</div>