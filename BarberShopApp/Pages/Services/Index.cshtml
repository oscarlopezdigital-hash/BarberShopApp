@page
@model BarberShopApp.Pages.Services.IndexModel

@{
    ViewData["Title"] = "Gestión de Servicios";
}

<div class="container my-5">

    <header class="d-flex justify-content-between align-items-center mb-5 pb-2 border-bottom">
        <h1 class="display-6 fw-light text-dark">
            <i class="bi bi-gear-wide-connected me-2 text-dark"></i> @ViewData["Title"]
        </h1>
        <a asp-page="Create" class="btn btn-dark btn-lg shadow-sm">
            <i class="bi bi-plus-lg me-2"></i> Crear Nuevo Servicio
        </a>
    </header>

    @if (Model.Service.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model.Service)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-lg rounded-4 overflow-hidden bg-light card-hover">
                        <div class="card-body p-4">

                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title fw-bold text-dark">
                                    <i class="bi bi-tag-fill me-2 text-dark"></i> @Html.DisplayFor(modelItem => item.Name)
                                </h5>

                                <h4 class="text-primary fw-bolder mb-0">
                                    @Html.DisplayFor(modelItem => item.Price) €
                                </h4>
                            </div>

                            <div class="mt-3 small text-secondary">
                                <p class="mb-0">
                                    <i class="bi bi-clock-fill me-2"></i> Duración:
                                    <span class="fw-normal text-dark">@Html.DisplayFor(modelItem => item.DurationMinutes) minutos</span>
                                </p>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-0 d-flex justify-content-end gap-3 py-3">
                            <a asp-page="./Edit" asp-route-id="@item.ServiceId" class="btn btn-link text-secondary p-0 small" title="Editar">
                                Editar
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.ServiceId" class="btn btn-link text-danger p-0 small" title="Eliminar">
                                Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-5" role="alert">
            <p class="mb-0">Aún no hay servicios registrados en la barbería.</p>
            <hr>
            <a asp-page="Create" class="btn btn-info">Registrar el primer servicio</a>
        </div>
    }
</div>