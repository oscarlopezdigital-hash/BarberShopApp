<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BarberShopApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.39.0/css/tempusdominus-bootstrap-4.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BarberShopApp.styles.css" asp-append-version="true" />
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/main.min.css' rel='stylesheet' />

    <style>
        /* 1. Definimos el ancho de la mini-barra lateral y espaciado */
        :root {
            --mini-sidebar-width: 80px; /* Muy estrecha */
            --color-accent: #CC0000; /* Rojo Clásico */
            --color-sidebar: #1A1A1A; /* Negro Profundo */
            --color-body: #EAEAEA; /* GRIS CEMENTO CÁLIDO */
            --color-text-dark: #333333;
            --color-text-light: #EEEEEE;
        }

        /* 2. Fondo del cuerpo: Gris Cemento y texto oscuro */
        body {
            background-color: var(--color-body);
            color: var(--color-text-dark);
            padding-left: var(--mini-sidebar-width);
            font-family: 'Georgia', serif;
        }

        /* 3. Color de marca (Acento: Rojo Clásico Brillante) */
        .text-brand-primary {
            color: var(--color-accent) !important;
        }

        .bg-brand-primary {
            background-color: var(--color-accent) !important;
        }

        /* 4. Mini-Barra Lateral Fija (Negro Profundo) */
        .mini-sidebar {
            width: var(--mini-sidebar-width);
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            z-index: 1000;
            background-color: var(--color-sidebar); /* Negro Profundo */
            box-shadow: 4px 0 10px rgba(0, 0, 0, 0.4);
            padding-top: 30px;
        }

            .mini-sidebar .nav-link {
                color: var(--color-text-light); /* Texto gris muy claro */
                text-align: center;
                padding: 15px 0;
                font-size: 0.75rem;
                font-weight: 500;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
                display: block;
            }

                .mini-sidebar .nav-link i {
                    font-size: 1.5rem;
                    display: block;
                    margin-bottom: 3px;
                }

                .mini-sidebar .nav-link:hover, .mini-sidebar .nav-link.active {
                    background-color: #333333; /* Gris oscuro al pasar el ratón */
                    color: var(--color-accent) !important; /* Rojo en hover */
                }

        /* 5. Barra Superior (Contraste con el cuerpo) */
        .top-header {
            background-color: #ffffff;
            border-bottom: 2px solid var(--color-accent); /* Borde Rojo */
            padding: 15px 30px;
            margin-left: 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* 6. Botón de acción destacado (Rojo) */
        .btn-editorial {
            font-weight: bold;
            letter-spacing: 2px;
            border-radius: 0 !important;
            padding: 10px 25px;
        }
    </style>
</head>
<body>

    <aside class="mini-sidebar d-flex flex-column">

        <div class="mb-4 text-center">
            <a class="text-brand-primary" asp-area="" asp-page="/Index" style="text-decoration: none;">
                <i class="bi bi-scissors" style="font-size: 2.5rem;"></i>
            </a>
        </div>

        <ul class="nav flex-column flex-grow-1">

            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-page="/Index">
                    <i class="bi bi-house-door-fill"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-page="/Services/PublicIndex">
                    <i class="bi bi-tag-fill"></i> Servicios
                </a>
            </li>

            @* ----------------------------------------------------------- *@
            @* LÓGICA DE NAVEGACIÓN CLIENTE VS. ADMINISTRADOR *@
            @* ----------------------------------------------------------- *@
            @if (User.Identity!.IsAuthenticated)
            {
                // Enlace ÚNICO para el Panel del Cliente (CORREGIDO: apunta a /Client/Index)
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Client/Index">
                        <i class="bi bi-person-fill"></i> Mi Panel
                    </a>
                </li>

                // Enlaces de ADMINISTRACIÓN (solo para el email de admin)
                if (User.Identity.Name == "admin@tubarberia.com")
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Appointments/Index">
                            <i class="bi bi-calendar-check"></i> Agenda
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Services/Index">
                            <i class="bi bi-card-checklist"></i> Admin.
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Barbers/Index">
                            <i class="bi bi-people-fill"></i> Barberos
                        </a>
                    </li>

                    // Enlace de S-ADMIN (solo para el email de super-admin)
                    <li class="nav-item">
                        <a class="nav-link text-warning" asp-area="" asp-page="/Tenants/Index">
                            <i class="bi bi-gear-fill"></i> S-Admin
                        </a>
                    </li>
                }
            }
            @* ----------------------------------------------------------- *@

        </ul>
    </aside>

    <header class="top-header sticky-top">
        <div class="fw-bold fs-5 text-dark">
            <span class="text-brand-primary">BARBER</span>SHOP <span class="text-secondary">CENTRAL</span>
        </div>
        <div class="d-flex align-items-center">
            <a class="btn bg-brand-primary btn-editorial fw-bold text-white shadow-sm me-4" asp-area="" asp-page="/Appointments/Create">
                RESERVAR CITA
            </a>
            <div class="d-flex align-items-center fw-bold text-dark border rounded-pill px-3 py-1" style="border-color: var(--color-accent) !important;">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </header>


    <div class="container-fluid py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-white text-dark py-4 mt-5 border-top" style="border-color: var(--color-accent) !important;">
        <div class="container text-center">
            <p class="mb-0 small">
                &copy; 2025 - BarberShop Central - Todos los derechos reservados. |
                <a asp-area="" asp-page="/Privacy" class="text-dark text-decoration-underline">Política de Privacidad</a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.39.0/js/tempusdominus-bootstrap-4.min.js"></script>

    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/main.min.js'></script>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/locales-all.min.js'></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>