@page
@model CreateModel
@{
    ViewData["Title"] = "Añadir Nuevo Barbero";
}

<div class="container my-5">
    <div class="row justify-content-center">

        <div class="col-lg-6 col-md-8">

            <header class="text-center mb-5">
                <h1 class="display-6 fw-light text-dark">
                    <i class="bi bi-person-plus-fill me-2 text-dark"></i> @ViewData["Title"]
                </h1>
                <p class="lead text-muted">Introduce los detalles del nuevo estilista para tu barbería.</p>
            </header>

            <div class="p-4 p-md-5 shadow-lg rounded-4 bg-white border border-2">

                <form method="post" class="row g-4">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Barber.Name" class="form-control" placeholder="Nombre completo del barbero" />
                            <label asp-for="Barber.Name">Nombre Completo</label>
                            <span asp-validation-for="Barber.Name" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Barber.Email" type="email" class="form-control" placeholder="Correo electrónico" />
                            <label asp-for="Barber.Email">Correo Electrónico</label>
                            <span asp-validation-for="Barber.Email" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Barber.Phone" class="form-control" placeholder="Teléfono de contacto (Opcional)" />
                            <label asp-for="Barber.Phone">Teléfono de Contacto (Opcional)</label>
                            <span asp-validation-for="Barber.Phone" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <textarea asp-for="Barber.Description" class="form-control" placeholder="Descripción y especialidades" style="height: 120px"></textarea>
                            <label asp-for="Barber.Description">Descripción y Especialidades</label>
                            <span asp-validation-for="Barber.Description" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <div class="col-12 mt-4 d-flex justify-content-between align-items-center">

                        <button type="submit" value="Añadir" class="btn btn-dark btn-lg shadow-sm">
                            <i class="bi bi-person-plus-fill me-2"></i> Crear Barbero
                        </button>

                        <a asp-page="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i> Volver a la Lista
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}