@page
@model CreateModel
@{
    ViewData["Title"] = "Añadir Nuevo Barbero";
}

<h1>Añadir Barbero</h1>

<h4>Barbero</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Barber.Name" class="control-label"></label>
                <input asp-for="Barber.Name" class="form-control" />
                <span asp-validation-for="Barber.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Barber.Email" class="control-label"></label>
                <input asp-for="Barber.Email" class="form-control" />
                <span asp-validation-for="Barber.Email" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Añadir" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}