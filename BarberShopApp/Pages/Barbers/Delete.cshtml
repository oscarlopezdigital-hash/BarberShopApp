@page
@model DeleteModel

@{
    ViewData["Title"] = "Eliminar Barbero";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <header class="text-center mb-5">
                <h1 class="display-6 fw-light text-danger">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirmar Eliminación
                </h1>
                <h3 class="lead text-dark fw-bold mt-4">¿Está seguro de que desea eliminar al barbero @Model.Barber.Name?</h3>
                <p class="text-muted">Esta acción no se puede deshacer y eliminará todos los registros asociados.</p>
            </header>

            <div class="p-4 p-md-5 shadow-lg rounded-4 bg-light" style="border: 2px solid rgba(220, 53, 69, 0.5);">

                <h4 class="mb-4 text-dark border-bottom pb-2">Detalles del Barbero</h4>

                <ul class="list-group list-group-flush mb-4">

                    <li class="list-group-item bg-light d-flex justify-content-between">
                        <span class="text-muted fw-bold"><i class="bi bi-person-fill me-2"></i> @Html.DisplayNameFor(model => model.Barber.Name):</span>
                        <span class="text-dark fw-bold">@Html.DisplayFor(model => model.Barber.Name)</span>
                    </li>

                    <li class="list-group-item bg-light d-flex justify-content-between">
                        <span class="text-muted"><i class="bi bi-envelope me-2"></i> @Html.DisplayNameFor(model => model.Barber.Email):</span>
                        <span class="text-dark">@Html.DisplayFor(model => model.Barber.Email)</span>
                    </li>

                    <li class="list-group-item bg-light">
                        <p class="text-muted fw-bold mb-1 mt-3"><i class="bi bi-info-circle me-2"></i> @Html.DisplayNameFor(model => model.Barber.Description):</p>
                        <p class="text-dark">@Html.DisplayFor(model => model.Barber.Description)</p>
                    </li>
                </ul>

                <form method="post" class="mt-4 pt-3 border-top">
                    <input type="hidden" asp-for="Barber.BarberId" />

                    <div class="d-flex justify-content-between">
                        <button type="submit" value="Eliminar" class="btn btn-danger btn-lg shadow-sm">
                            <i class="bi bi-trash-fill me-2"></i> SÍ, Eliminar Barbero
                        </button>

                        <a asp-page="./Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-x-lg me-2"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>