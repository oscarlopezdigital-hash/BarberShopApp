@page
@model BarberShopApp.Pages.Barbers.DetailsModel

@{
    ViewData["Title"] = "Perfil del Barbero";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <header class="text-center mb-5">
                <h1 class="display-5 fw-bold text-dark mb-1">
                    <i class="bi bi-person-circle me-3 text-secondary"></i> @Html.DisplayFor(model => model.Barber.Name)
                </h1>
                <p class="lead text-muted">
                    @ViewData["Title"]
                </p>
            </header>

            <div class="p-4 p-md-5 shadow-lg rounded-4 bg-white border border-2">

                <h4 class="mb-4 text-dark border-bottom pb-2">Datos y Especialización</h4>

                <ul class="list-group list-group-flush mb-4">

                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 bg-white">
                        <span class="text-muted fw-bold"><i class="bi bi-shop me-2"></i> @Html.DisplayNameFor(model => model.Barber.Tenant):</span>
                        <span class="text-dark">@Html.DisplayFor(model => model.Barber.Tenant.AdminEmail)</span>
                    </li>

                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 bg-white">
                        <span class="text-muted fw-bold"><i class="bi bi-envelope me-2"></i> Correo Electrónico:</span>
                        <span class="text-dark">@Html.DisplayFor(model => model.Barber.Email)</span>
                    </li>
                </ul>

                <div class="mt-4 pt-4 border-top">
                    <h4 class="mb-3 text-secondary">
                        <i class="bi bi-journal-text me-2"></i> @Html.DisplayNameFor(model => model.Barber.Description)
                    </h4>
                    <blockquote class="blockquote border-start border-3 ps-3 text-muted">
                        <p class="mb-0 fs-6">
                            @Html.DisplayFor(model => model.Barber.Description)
                        </p>
                    </blockquote>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <a asp-page="./Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i> Volver al Índice
                </a>
                <a asp-page="./Edit" asp-route-id="@Model.Barber.BarberId" class="btn btn-dark shadow-sm">
                    <i class="bi bi-pencil-fill me-2"></i> Editar Perfil
                </a>
            </div>

        </div>
    </div>
</div>